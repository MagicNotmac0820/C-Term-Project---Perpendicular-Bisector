{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "(C): Build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "-ggdb",
                "-Wall",
                "-Wextra",
                "${file}",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}